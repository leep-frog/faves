{
  "name": "faves",
  "displayName": "faves",
  "description": "",
  "publisher": "groogle",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leep-frog/faves"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "faves.add",
        "title": "Faves: Add to favorites"
      },
      {
        "command": "faves.remove",
        "title": "Faves: Remove from favorites"
      },
      {
        "command": "faves.toggle",
        "title": "Faves: Toggle favorite bit for file",
        "icon": "$(star-full)"
      },
      {
        "command": "faves.search",
        "title": "Faves: Search"
      },
      {
        "command": "faves.globalAdd",
        "title": "Faves: [Global] Add to favorites"
      },
      {
        "command": "faves.globalRemove",
        "title": "Faves: [Global] Remove from favorites"
      },
      {
        "command": "faves.globalToggle",
        "title": "Faves: [Global] Toggle favorite bit for file",
        "icon": "$(star-full)"
      },
      {
        "command": "faves.globalSearch",
        "title": "Faves: [Global] Search"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "faves.toggle"
        },
        {
          "command": "faves.globalToggle"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Faves",
      "properties": {
        "faves.favorites": {
          "type": "array",
          "default": [],
          "description": "List of favorited files",
          "items": {
            "type": "object",
            "description": "Data for a specific favorited item",
            "properties": {
              "path": {
                "type": "string",
                "description": "File path"
              }
            }
          }
        },
        "faves.globalFavorites": {
          "type": "array",
          "default": [],
          "description": "List of globally favorited files",
          "items": {
            "type": "object",
            "description": "Data for a specific favorited item",
            "properties": {
              "path": {
                "type": "string",
                "description": "File path"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
